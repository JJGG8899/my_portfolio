<% layout('layout') -%>

<section class="single-work-overview">
	<div class="single-work-intro">
		<h3> <%= work.title %> </h3>
	</div>
	<div class="row">
		<div class="col-md-6 col-xs-12 ">
			<div class="single-work-overview-demo">
				<img src="<%= work.demoPic %>" alt="<%= work.demoPic %>" />
			</div>
		</div>
		<div class="col-md-6 col-xs-12">
			<div class="single-work-overview-content">
				<div class="work-clint single-work-item">
					<span> <i class="fa fa-briefcase" aria-hidden="true"></i> </span> Client name: <%= work.client %>
				</div>
				<div class="work-role single-work-item">
					<span><i class="fa fa-user" aria-hidden="true"></i></span> My role: <%= work.role %>
				</div>
				<div class="work-techs single-work-item">
					<span><i class="fa fa-code-fork" aria-hidden="true"></i></span> Techs: <%= work.technologies %>
				</div>
				<div class="work-techs single-work-item">
					<a href="<%= work.clientLink %>" target="_blank"> <span><i class="fa fa-link" aria-hidden="true"></i></span> Link </a>
				</div>
			</div>
		</div>
	</div>
	<div class="single-work-desc container">
		<div class="work-desc single-work-item container">
			<%= work.shortDesc %>
		</div>
	</div>
</section>
