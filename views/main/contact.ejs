<% layout('layout') -%>

<section class="contact-banner">
	<div class="row">
		<div class="col-md-6 col-xs-12">
			<h3> CONTACT </h3>
			<h6> CURRENTLY AVAILABLE FOR CONTRACT OR FULL-TIME WORK,
AND WOULD LOVE TO HEAR FROM YOU </h6>
			<ul>
				<h6> Reach me on: </h6>
				<li> <img src="https://assets-cdn.github.com/images/modules/logos_page/Octocat.png" alt="" /></li>
				<li> <img src="https://www.seeklogo.net/wp-content/uploads/2014/12/twitter-logo-vector-download.jpg" alt="" /></li>
				<li> <img src="http://vectorlogo4u.com/wp-content/uploads/2016/01/gmail-icon-vector-520x245.png" alt="" /></li>
			</ul>
		</div>
		<div class="col-md-6 col-xs-12">
			<h2> My pic </h2>
		</div>
	</div>
</section>
<section class="contact-form">
	<div class="row">
		<div class="col-md-12 col-xs-12">
			<h3> Send Me A message </h3>
			<h6> Any message will be replied within 24 hours. </h6>
			<div class="contact-form-content">
				<form class="form-horizontal">
					<div class="form-group">
						<label class="col-xs-2 control-label"> <i class="fa fa-user" aria-hidden="true"></i> </label>
						<div class="col-sm-10">
							<input type="text" placeholder="Your Name" class="form-control">
						</div>
					</div>
					<div class="form-group">
						<label class="col-xs-2 control-label"> <i class="fa fa-envelope" aria-hidden="true"></i> </label>
						<div class="col-sm-10">
							<input type="email" placeholder="Your email" class="form-control">
						</div>
					</div>
					<div class="form-group">
						<label class="col-xs-2 control-label"> <i class="fa fa-pencil-square-o" aria-hidden="true"></i> </label>
						<div class="col-sm-10">
							<textarea placeholder="Your message" class="form-control" id="form-message">
						</textarea>
						</div>
					</div>
					<div class="form-group">
				    <div class="col-sm-offset-2 col-sm-10">
				      <button type="submit" class="btn btn-default pull-right">Submit</button>
				    </div>
				  </div>
				</form>
			</div>
		</div>
	</div>
</section>
